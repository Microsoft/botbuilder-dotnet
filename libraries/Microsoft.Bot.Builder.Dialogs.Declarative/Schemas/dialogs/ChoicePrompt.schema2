{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Choice prompt",
    "description": "This represents a dialog which provides choices to the user and recognized the selected choice",
    "$implements": [
        "Microsoft.IDialog"
    ],
    "allOf": [
        {
            "$ref":"../component.schema#"
        },
        {
            "properties": {
                "property": {
                    "type": "string",
                    "description": "This is the property to set.",
                    "examples": [
                        "value.birthday"
                    ]
                },
                "choices": {
                    "type": "array",
                    "description": "Array of Choice objects",
                    "items": {
                        "type": "object",
                        "properties": {
                            "value": {
                                "type": "string",
                                "description": "The value to return when selected."
                            },
                            "action": {
                                "$ref": "#/definitions/CardAction",
                                "description": "action to perform (metadata for buttons)"
                            },
                            "synonyms": {
                                "type": "array",
                                "description": "alternate synonyms to match on",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "findChoicesOptions": {
                        "type": "object",
                        "properties": {
                            "noValue": {
                                "type": "boolean"
                            },
                            "noAction": {
                                "type": "boolean"
                            },
                            "allowPartialMatches": {
                                "type": "boolean"
                            },
                            "locale": {
                                "type": [
                                    "string",
                                    "null"
                                ]
                            },
                            "maxTokenDistance": {
                                "type": [
                                    "integer",
                                    "null"
                                ]
                            },
                            "tokenizer": {
                                "$ref": "#/definitions/TokenizerFunction"
                            }
                        }
                    },
                    "initialPrompt": {
                        "$type":"Microsoft.IActivityTemplate",
                        "title": "Initial Prompt",
                        "description": "The message to send to start the dialog.",
                        "examples": [
                            "What color would you like?"
                        ]
                    },
                    "retryPrompt": {
                        "$type":"Microsoft.IActivityTemplate",
                        "title": "Retry Prompt",
                        "description": "The message to send to prompt again.",
                        "examples": [
                            "Let's try again. What color would you like?"
                        ]
                    },
                    "noMatchResponse": {
                        "$type":"Microsoft.IActivityTemplate",
                        "title": "No match",
                        "description": "I didn't recognize a color from the options.",
                        "examples": [
                            "No choice was recognized"
                        ]
                    }
                }
            }
        }
    ]
}