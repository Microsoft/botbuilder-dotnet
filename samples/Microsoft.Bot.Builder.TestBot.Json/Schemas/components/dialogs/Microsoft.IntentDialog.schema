{
    "$schema": "https://raw.githubusercontent.com/Microsoft/botbuilder-tools/SchemaGen/packages/CogSchema/src/cogSchema.schema",
    "$role": "unionType(Microsoft.IDialog)",
    "title": "Intent Dialog",
    "description": "Configures a recognizer and the intent routes",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "recognizer": {
            "$type": "Microsoft.IRecognizer"
        },
        "routes": {
            "type": "object",
            "description": "maps intent->IDialog",
            "additionalProperties": {
                "$type": "Microsoft.IDialog"
            }
        }
    },
    "required": [
        "recognizer",
        "routes"
    ]
}