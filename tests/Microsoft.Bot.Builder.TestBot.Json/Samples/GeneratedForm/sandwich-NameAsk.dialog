
{
    "$schema": "https://raw.githubusercontent.com/microsoft/botbuilder-dotnet/chrimc/map/schemas/sdk.schema",
    "$type": "Microsoft.OnAsk",
    "condition":"and(!$Name, contains(dialog.requiredProperties, 'Name'))",
    "actions": [
        {
            "$type": "Microsoft.IfCondition",
            "condition":"$lastExpectedProperty == 'Name'",
            "actions":[
                {
                    "$type": "Microsoft.SendActivity",
                    "activity": "@{help(@PropertyName)}"
                }
                    
            ]
        },
        {
            "$type": "Microsoft.IfCondition",
            "condition": "contains(turn.schema.properties['Name'].$mappings, 'utterance')",
            "actions":[
                {
                    "$type": "Microsoft.Ask",
                    "activity": "@{AskName()}",
                    "expectedProperties": [
                         "utterance","Name"
            ]
                }
            ],
            "elseActions":[
                {
                    "$type": "Microsoft.Ask",
                    "activity": "@{AskName()}",
                    "expectedProperties": [
                        "Name"
                    ]
                }
            ]
        },
        {
            "$type": "Microsoft.SetProperty",
            "property": "$lastExpectedProperty",
            "value": "'Name'"
        }
    ]
}
