{
    "$schema": "../../app.schema",
    "$type": "Microsoft.AdaptiveDialog",
    "autoEndDialog": false,
    "recognizer": {
        "$type": "Microsoft.RegexRecognizer",
      "intents": {
        "ToDoIntent": "(?i)todo",
        "EmailIntent": "(?i)email",
        "CalendarIntent": "(?i)meeting",
        "HelpIntent": "(?i)help",
        "CancelIntent":"(?i)cancel"
      }
    },
  "events": [
    {
      "$type": "Microsoft.OnIntent",
      "intent": "ToDoIntent",
      "actions": [
        "ToDoBot.main"
      ]
    },
    {
      "$type": "Microsoft.OnIntent",
      "intent": "EmailIntent",
      "actions": [
        "EmailBot.main"
      ]
    },
    {
      "$type": "Microsoft.OnIntent",
      "intent": "CalendarIntent",
      "actions": [
        "CalendarBot.main"
      ]
    },
    {
      "$type": "Microsoft.OnIntent",
      "intent": "HelpIntent",
      "actions": [
        {
          "$type": "Microsoft.SendActivity",
          "activity": "[help]"
        }
      ]
    },
    {
      "$type": "Microsoft.OnIntent",
      "intent": "CancelIntent",
      "actions": [
        {
          "$type": "Microsoft.EndDialog"
        }
      ]
    },
    {
      "$type": "Microsoft.OnUnknownIntent",
      "actions": [
        {
          "$type": "Microsoft.SendActivity",
          "activity": "Hi, I am VA bot, you can try show/send email, add/delete todos."
        }
      ]
    }
  ]
}